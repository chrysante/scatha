PROJ_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

source $PROJ_DIR/scripts/platform.sh

if [ "$OS" = "linux" ]; then
    GENERATOR=""
elif [ "$OS" = "windows" ]; then
    GENERATOR=""
elif [ "$OS" = "mac" ]; then
    GENERATOR=-GXcode
else
    error "Unknown OS \"$OS\""
fi

cmake -S $PROJ_DIR -B build $GENERATOR -DCPM_SOURCE_CACHE=build/srccache